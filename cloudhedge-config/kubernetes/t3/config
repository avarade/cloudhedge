kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  name: php
  namespace: 1538749178754-t3-colortest
spec:
  replicas: 10
  template:
    metadata:
      labels:
        deploy: php
        cbservice: php
    spec:
      containers:
        - name: php
          image: gurunath/colortest
          env:
            - name: color
              value: green
            - name: CB_ENV_NAME
              value: 1538749178754-t3-colortest
            - name: CB_CLUSTER_ID
              value: 5bb35231a99ef7000f2f5d1f

---
kind: Service
apiVersion: v1
metadata:
  labels:
    service: php
    cbservice: php
  name: php
  namespace: 1538749178754-t3-colortest
spec:
  type: LoadBalancer
  ports:
    - port: 80
      targetPort: 80
      name: port80
  selector:
    deploy: php

---
kind: HorizontalPodAutoscaler
apiVersion: autoscaling/v1
metadata:
  name: php
  namespace: 1538749178754-t3-colortest
spec:
  scaleTargetRef:
    apiVersion: apps/v1beta1
    kind: Deployment
    name: php
  minReplicas: 1
  maxReplicas: 10
  targetCPUUtilizationPercentage: 50

