  labels:
    service: wp-apache
    cbservice: wp-apache
  name: wp-apache
  namespace: 1548678575835-demodev-apacheapplication
spec:
  type: LoadBalancer
  ports:
    - port: 80
      targetPort: 80
      name: port80
  selector:
    deploy: wp-apache

