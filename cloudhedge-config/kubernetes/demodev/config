kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  name: wp-apache
  namespace: 1548678575835-demodev-apacheapplication
spec:
  replicas: 1
  template:
    metadata:
      labels:
        deploy: wp-apache
        cbservice: wp-apache
    spec:
      containers:
        - name: wp-apache
          image: cloudhedge/wp-apache
          env:
            - name: CB_ENV_NAME
              value: 1548678575835-demodev-apacheapplication
            - name: CB_CLUSTER_ID
              value: 5bbdf817a76dab000e4ec651

---
kind: Service
